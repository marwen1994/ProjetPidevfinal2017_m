<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="60dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        app:cardBackgroundColor="@color/bb_inActiveBottomBarItemColor"
        app:cardElevation="5dp"

        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="174dp">


            <ImageView
                android:id="@+id/im_dem"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:layout_weight="0.46"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:text="Equipement:"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount :"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_dem"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/linearLayout"
                android:textColor="@color/colorAccent"
                android:text="Equipement:"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:textColor="@color/colorAccent"
                android:text="Amount:"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/nom_dem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView9"
                android:layout_marginStart="59dp"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@+id/textView9"
                android:text="TextView"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/cat_dem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nom_dem"
                android:textColor="@color/colorAccent"
                android:layout_alignTop="@+id/textView29"
                android:text="TextView"
                android:textSize="23dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>