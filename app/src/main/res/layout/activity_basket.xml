<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marwen.projetpidevfinal2017.User.Basket">


    <EditText
        android:id="@+id/serach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Search Basket"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/list_Basket"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/serach"
        android:layout_marginTop="16dp" />
    <Button

        android:text="Demander"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16dp"
        android:onClick="Demender"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/list_Basket"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
