<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marwen.projetpidevfinal2017.admin.DemendeGrp"
    >

    <TextView
        android:id="@+id/serach_grp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:text="                   Equipement Requests "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#080606"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/list_grp"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/serach_grp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
